<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gitee.application.upms.mapper.PlatformRoleMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.gitee.common.upms.dao.PlatformRoleDO">
		<id column="role_id" property="roleId"/>
		<result column="create_user" property="createUser"/>
		<result column="create_date" property="createDate"/>
		<result column="update_user" property="updateUser"/>
		<result column="update_date" property="updateDate"/>
		<result column="version" property="version"/>
		<result column="role_name" property="roleName"/>
		<result column="remark" property="remark"/>
	</resultMap>

	<!-- 通用查询结果列 -->
	<select id="listRolesByUserId" resultMap="BaseResultMap">
		SELECT
		<include refid="Base_Column_List"/>
		FROM
		platform_role r, platform_user_role ur WHERE r.role_id = ur.role_id and ur.user_id IN (#{userId})
	</select>

	<!-- 通过用户ID，查询角色信息-->
	<sql id="Base_Column_List">
        r.create_user,
        r.create_date,
        r.update_user,
        r.update_date,
        r.version,
        r.role_id, r.role_name, r.remark
    </sql>

</mapper>
